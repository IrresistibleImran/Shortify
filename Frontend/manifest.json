{
    "name": "Shortify",
    "version": "0.0.1",
    "description": "A tiny Url extension",
    "permissions": ["tabs", "storage", "identity"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_popup" : "popup.html"
    },
    "icons" : {
        "128" : "./images/logo.png"
    },
    "manifest_version": 2
}