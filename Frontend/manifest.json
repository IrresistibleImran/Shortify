{
    "name": "Shortify",
    "version": "0.0.1",
    "description": "A URL shortening service",
    "permissions": ["tabs", "storage", "identity"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_popup" : "popup.html",
        "browser_action": {
            "default_icon": {                  
                "16": "images/shortify.png",
                "32": "images/shortify.png",
                "64": "images/shortify.png",
                "128": "images/shortify.png",
                "48": "images/shortify.png"
            }
        }
    },
    "icons" : {
        "128" : "./images/shortify.png"
    },
    "manifest_version": 2
}